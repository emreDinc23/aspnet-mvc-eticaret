@model Uk.Eticaret.Persistence.Entities.Product

<div class="container mt-5">
    <div class="container-fluid px-4">

        <h1 class="mt-4">Tables</h1>
        <ol class="breadcrumb mb-4">
            <li class="breadcrumb-item">Product</li>
            <li class="breadcrumb-item active">Delete</li>
        </ol>

        <p class="text-center">
            <a class="btn btn-success btn-sm" asp-action="Edit" asp-route-id="@Model.Id">Edit Now</a>
        </p>

        <div class="card mb-4">
            <div class="card-header">
                <i class="fas fa-table me-1"></i>
                Product Delete
            </div>

            <div class="card-body">
                <h3>Are you sure you want to delete this?</h3>

                <div>
                    <h4>Product</h4>
                    <hr />

                    <dl class="row">
                        <div class="col-md-2">
                            <dt class="col-sm-12">@Html.DisplayNameFor(model => model.ProductName)</dt>
                            <dd class="col-sm-12">@Html.DisplayFor(model => model.ProductName)</dd>
                        </div>

                        <div class="col-md-2">
                            <dt class="col-sm-12">@Html.DisplayNameFor(model => model.ProductDescription)</dt>
                            <dd class="col-sm-12">@Html.DisplayFor(model => model.ProductDescription)</dd>
                        </div>

                        <div class="col-md-2">
                            <dt class="col-sm-12">@Html.DisplayNameFor(model => model.ProductColor)</dt>
                            <dd class="col-sm-12">@Html.DisplayFor(model => model.ProductColor)</dd>
                        </div>

                        <div class="col-md-2">
                            <dt class="col-sm-12">@Html.DisplayNameFor(model => model.ProductRating)</dt>
                            <dd class="col-sm-12">@Html.DisplayFor(model => model.ProductRating)</dd>
                        </div>

                        <div class="col-md-2">
                            <dt class="col-sm-12">@Html.DisplayNameFor(model => model.Price)</dt>
                            <dd class="col-sm-12">@Html.DisplayFor(model => model.Price)</dd>
                        </div>

                        <div class="col-md-2">
                            <dt class="col-sm-12">@Html.DisplayNameFor(model => model.ProductDate)</dt>
                            <dd class="col-sm-12">@Html.DisplayFor(model => model.ProductDate)</dd>
                        </div>

                        <div class="col-md-2">
                            <dt class="col-sm-12">@Html.DisplayNameFor(model => model.Stock)</dt>
                            <dd class="col-sm-12">@Html.DisplayFor(model => model.Stock)</dd>
                        </div>

                        <div class="col-md-2">
                            <dt class="col-sm-12">@Html.DisplayNameFor(model => model.IsActive)</dt>
                            <dd class="col-sm-12">@Html.DisplayFor(model => model.IsActive)</dd>
                        </div>

                        <div class="col-md-2">
                            <dt class="col-sm-12">@Html.DisplayNameFor(model => model.IsVisibleSlider)</dt>
                            <dd class="col-sm-12">@Html.DisplayFor(model => model.IsVisibleSlider)</dd>
                        </div>

                        <div class="col-md-2">
                            <dt class="col-sm-12">@Html.DisplayNameFor(model => model.DeletedAt)</dt>
                            <dd class="col-sm-12">@Html.DisplayFor(model => model.DeletedAt)</dd>
                        </div>
                    </dl>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <div class="mt-3">
                            <button type="submit" class="btn btn-danger">Delete</button> |
                            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
