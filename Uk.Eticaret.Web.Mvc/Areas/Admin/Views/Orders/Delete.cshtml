@model Uk.Eticaret.Persistence.Entities.Order

<div class="container mt-5">
    <div class="container-fluid px-4">

        <h1 class="mt-4">Tables</h1>
        <ol class="breadcrumb mb-4">
            <li class="breadcrumb-item">Product</li>
            <li class="breadcrumb-item active">Delete</li>
        </ol>

        <p class="text-center">
            <a class="btn btn-success btn-sm" asp-action="Edit" asp-route-id="@Model.Id"><i class="fas fa-edit"></i> Edit Now</a>
        </p>

        <div class="card mb-4">
            <div class="card-header">
                <i class="fas fa-table me-1"></i>
                Product Delete
            </div>

            <div class="card-body">
                <h3>Are you sure you want to delete this?</h3>

                <div>
                    <h4>Product</h4>
                    <hr />

                    <dl class="row">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.OrderDate)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.OrderDate)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.User)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.User.Email)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.ShippingAddress)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.ShippingAddress.Address1)
                        </dd>
                    </dl>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger"><i class="fas fa-trash"></i> Delete</button> |
                        <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Back to List</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
