@model Uk.Eticaret.Persistence.Entities.Category

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid px-4">

    <h1 class="mt-4">Tables</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item">Category</li>
        <li class="breadcrumb-item active">Detail</li>
    </ol>
    <p class="text-center">
        <a class="btn btn-success btn-sm" asp-action="Edit">Edit Category</a>
    </p>
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table me-1"></i>
            Category Details
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-2">Name</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Name)</dd>

                <dt class="col-sm-2">Description</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Description)</dd>

                <dt class="col-sm-2">Image</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Image)</dd>

                <dt class="col-sm-2">Tags</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Tags)</dd>

                <dt class="col-sm-2">IsActive</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.IsActive)</dd>
            </dl>
        </div>
        <div class="card-footer">
            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">Edit</a> |
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</div>