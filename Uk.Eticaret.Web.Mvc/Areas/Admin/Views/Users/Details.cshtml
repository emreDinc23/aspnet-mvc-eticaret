@model Uk.Eticaret.Persistence.Entities.User


<div class="container mt-5">
    <div class="container-fluid px-4">

        <h1 class="mt-4">User Details</h1>
        <ol class="breadcrumb mb-4">
            <li class="breadcrumb-item">User</li>
            <li class="breadcrumb-item active">Detail</li>
        </ol>
        <div class="card mb-4">
            <div class="card-header">
                <i class="fas fa-table me-1"></i>
                User Details
            </div>
            <dl class="row">
                <dt class="col-sm-2">First Name</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.FirstName)</dd>
                <dt class="col-sm-2">Last Name</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.LastName)</dd>
                <dt class="col-sm-2">Username</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Username)</dd>
                <dt class="col-sm-2">Phone Number</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.PhoneNumber)</dd>
                <dt class="col-sm-2">Email</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Email)</dd>
                <dt class="col-sm-2">Password</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Password)</dd>
                <dt class="col-sm-2">Reset Password Token</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.ResetPasswordToken)</dd>
                <dt class="col-sm-2">Reset Password Token Expiration</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.ResetPasswordTokenExpiration)</dd>
                <dt class="col-sm-2">Date of Birth</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.DateOfBirth)</dd>
                <dt class="col-sm-2">Gender</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Gender)</dd>
                <dt class="col-sm-2">Roles</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Roles)</dd>
                <dt class="col-sm-2">Is Active</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.IsActive)</dd>
            </dl>
        </div>
        <div>
            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">
                <i class="bx bx-edit"></i> Edit
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bx bx-arrow-back"></i> Back to List
            </a>
        </div>
    </div>
</div>

